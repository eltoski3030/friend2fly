<h1>Add a New Destination</h1>

<%= form_with model: @destination, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.submit "Create Destination" %>
  </div>
<% end %>


