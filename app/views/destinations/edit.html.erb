<h1>Edit Destination</h1>

<%= form_with(model: @destination, local: true) do |form| %>
  <% if @destination.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@destination.errors.count, "error") %> prohibited this destination from being saved:</h2>

      <ul>
        <% @destination.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :destination_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :destination_description %>
  </div>

  <div class="actions">
    <%= form.submit "Update Destination" %>
  </div>
<% end %>

<%= link_to 'Back to Destinations', destinations_path %>
