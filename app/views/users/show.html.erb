
<h1>User Profile</h1>
<h1><%= @user.username %>'s Profile</h1>
<p>Email: <%= @user.email %></p>

<h2>Your Destinations</h2>
<% if @destinations.present? %>
  <% @destinations.each do |destination| %>
    <div>
      <strong>Name:</strong> <%= destination.name %><br>
      <strong>Description:</strong> <%= destination.description %><br>
      <%= link_to 'Edit', edit_destination_path(destination) %> 
      <%= button_to 'Delete', destination_path(destination), method: :delete, data: { confirm: 'Are you sure?' } %>

      
    </div>
    
  <% end %>
<% else %>
  <p>You have not added any destinations yet.</p>
<% end %>
